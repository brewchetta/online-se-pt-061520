<!DOCTYPE html>
<html>
  <head>
    <title>Category</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'category_styles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="flash-message">
      <p><%= flash[:message] %></p>
    </div>

    <nav>
      <%= link_to "Boardgames", boardgames_path %>
      <%= link_to "Add Boardgame", new_boardgame_path %>
      <%= link_to "Add Category", new_category_path %>
    </nav>

    <h1>Make a New Category</h1>

    <%= yield %>
  </body>
</html>
