<h1><%= @boardgame.name %></h1>

<%= link_to "Edit", edit_boardgame_path(@boardgame) %>

<%= link_to "Remove", boardgame_path(@boardgame), method: :delete %>

<p><%= @boardgame.minimum_age %> and up</p>

<p><%= @boardgame.min_players %> - <%= @boardgame.max_players %> players</p>

<h3>Categories: </h3>
<ul class="categories-list">
  <% @boardgame.categories.each do |category| %>
    <li><%= category.name %>
      <%= button_to "Remove", remove_category_path, method: :delete, params: { boardgame_id: @boardgame.id, category_id: category.id } %>
    </li>
  <% end %>
</ul>

<h3>Reviews: </h3>
<ul class="reviews-list">
  <% @boardgame.reviews.each do |review| %>
    <li><%= review.content %></li>
  <% end %>
</ul>
